<?xml version="1.0" encoding="ISO-8859-1"?> 
<admresource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xslfile>admresource.xslt</xslfile>
    <form name="frmAdmRes" action="true" method="post" jsframework="dojo" >
        <admdbconnmgr defconn="true"/>
        <fieldset legend="Configurações de conteúdo">
            <input type="text" name="url" label="Endereço web" promptMessage="Endereço Web" jsrequired="true"/>
            <input type="text" name="title" label="Título" promptMessage="Título" maxlength="55" regExp="[a-zA-Z0-9\u00C0-\u00FF' ]+" invalidMessage="Somente letras, números e espaços"/>
        </fieldset>

        <div title="Aparência" open="true">
        <fieldset legend="Dimensões">
            <input type="text" name="width"  label="Largura" value="640" maxlength="9" regExp="\d{1,7}(|px|in|cm|mm|pt|em|ex|%)" invalidMessage="Largura inválida" promptMessage="Largura. Exemplos: 90%, 350px, 854" jsrequired="true" />
            <input type="text" name="height" label="Altura" value="480"  maxlength="9" regExp="\d{1,7}(|px|in|cm|mm|pt|em|ex|%)" invalidMessage="Altura inválida" promptMessage="Altura. Exemplos: 90%, 350px, 854" jsrequired="true" />
            <input type="checkbox" name="fb" label="Borda" value="true" promptMessage="Borda mostar en IE"/>
            <select name="scrolling" label="Barras de rolagem " promptMessage="Especifica se mostrar ou não barras de rolagem">
                <option value="no"/>
                <option value="yes"/>
                <option value="auto"/>
            </select>
        </fieldset>
        </div>

        <div title="Configurações Avançadas" open="true">
        <fieldset legend="Parâmetros">
            <statictext name="txtAllow">Permitir que os parâmetros da requisição</statictext>
            <input type="radio" id="target1" name="passparam" label="Yes" value="1"/>
            <input type="radio" id="target0" name="passparam" label="No" value="0" checked="true"/>
        </fieldset>
        <fieldset legend="Script">
            <input type="text" name="script" label="Script" promptMessage="Javascript manipulador de eventos onLoad" />
        </fieldset>
        </div>
        
        <fieldset>
            <statictext name="note">
                <![CDATA[
                    <font style="color: #428AD4; font-family: Verdana; font-size: 10px;">* Requisitos de dados</font>
                ]]>
            </statictext>
            <input type="submit" name="btnSave" id="btnSave" value="Salvar" />
            <input type="reset"  name="btnReset" id="btnReset" value="Reset" />
        </fieldset>

    </form>
</admresource>